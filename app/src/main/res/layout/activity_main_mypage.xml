<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMypage">

    <Button
        android:id="@+id/bt_nicknameSetting2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="#4FC3F7"
        android:layout_marginTop="20dp"
        android:text="거래중"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_camera2" />

    <Button
        android:id="@+id/bt_nicknameSetting3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#4FC3F7"

        android:text="구해요 내역"
        app:layout_constraintEnd_toStartOf="@+id/bt_nicknameSetting4"
        app:layout_constraintStart_toEndOf="@+id/bt_nicknameSetting2"
        app:layout_constraintTop_toBottomOf="@+id/iv_camera2" />

    <Button
        android:id="@+id/bt_nicknameSetting4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#4FC3F7"
        android:layout_marginEnd="20dp"
        android:text="떠나요 내역"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_camera2" />

    <ImageView
        android:id="@+id/iv_camera2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="마이페이지"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:text="닉네임"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera2"
        app:layout_constraintStart_toEndOf="@+id/iv_camera2"
        app:layout_constraintTop_toTopOf="@+id/iv_camera2" />

    <Button
        android:id="@+id/bt_nicknameSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4FC3F7"
        android:layout_marginTop="20dp"
        android:text="키워드 알림"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_nicknameSetting3" />


    <Button
        android:id="@+id/bt_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#4FC3F7"
        android:text="앱 설정"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_nicknameSetting" />

</androidx.constraintlayout.widget.ConstraintLayout>